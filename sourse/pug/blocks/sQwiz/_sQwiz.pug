mixin radio-item(i,t,n)
	+b.LABEL.radio-block 
		input(type="radio" name= n)
		+e.img-wrap.bg-wrap
			if i
				+pic(i,'bg',0).picture-bg 
				
		+e.title= t

mixin sQwiz(data)
	// start sQwiz
	+b.SECTION.sQwiz.section.bg-wrap#sQwiz&attributes(attributes)
		+pic("qwiz-bg.png",'bg').picture-bg
		.container
			+e.inner
				+e.inner-sp 
					h2 Узнайте за&nbsp;1&nbsp;минуту какой #[span септик] подойдет #[span для вашего дома] и&nbsp;#[span стоимость] его установки
					+e.head
						.row
							.col-auto
								+e.btn-control.disabled
									+icon("arrow-left")
							.col 1 вопрос из 8
							.col-auto
								+e.btn-control
									+icon("arrow-right")
						+b.progress
							+e.bar(style="width: 10%")
					+e.body
						+e.title Выберите тип вашего объекта
						.row
							.col-lg-3.col-sm-6 
								+radio-item('step-1-1','Дача','type')
							.col-lg-3.col-sm-6 
								+radio-item('step-1-2','Коттедж / дом','type')
							.col-lg-3.col-sm-6 
								+radio-item('step-1-3','Гостиница','type')
							.col-lg-3.col-sm-6 
								+radio-item('','Другое','type')
	// end sQwiz