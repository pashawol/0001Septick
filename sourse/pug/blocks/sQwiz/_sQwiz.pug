mixin radio-item(i,t,n)
	+b.LABEL.radio-block 
		input(type="radio" name= n)
		+e.img-wrap.bg-wrap
			if block
				block
			else if i
				+pic(i,'bg',0).picture-bg 
			else 
				span.qw ?
		+e.title= t

mixin sQwiz(data)
	// start sQwiz
	+b.SECTION.sQwiz.section.bg-wrap#sQwiz&attributes(attributes)
		+pic("qwiz-bg.png",'bg').picture-bg
		.container
			+e.inner
				+e.inner-padding 
					+e.inner-sp 
						h2 Узнайте за&nbsp;1&nbsp;минуту какой #[span септик] подойдет #[span для вашего дома] и&nbsp;#[span стоимость] его установки
						mixin item(w, t)
							+e.step&attributes(attributes)
								if t
									+e.head
										.row
											.col-auto
												+e.btn-control.sCalc__btn--prev.disabled
													+icon("arrow-left")
											.col=` ${w} вопрос из 8`
											.col-auto
												+e.btn-control.sCalc__btn--next
													+icon("arrow-right")
									+e.body
										+b.progress
											+e.bar(style=`width: ${w * 100/ 8 }%`)
										+e.title= t
										.row
											if block 
												block 
											else
												.col-lg-3.col-sm-6 
													+radio-item('step-1-1.jpg','Дача','type')
												.col-lg-3.col-sm-6 
													+radio-item('step-1-2.jpg','Коттедж / дом','type')
												.col-lg-3.col-sm-6 
													+radio-item('step-1-3.jpg','Гостиница','type')
												.col-lg-3.col-sm-6 
													+radio-item('','Другое','type')
								else
									+e.form-title  Введите ваш контактный номер и&nbsp;получите на&nbsp;него #[SPAN SMS с&nbsp;предварительным расчетом:] 
									+b.form-wrap
										.row
											.col
												+input("Номер телефона",'tel')
											.col-md-auto
												button.btn.btn-success(type="submit") Получить расчет
									ul 
										li Рекомендации эксперта по вариантам автономной канализации для Вашего дома
										li Сметную стоимость септика и его установки
						+item(1,'Выберите тип вашего объекта').active
						+item(2,'Сколько человек будет пользоваться канализацией (с учетом гостей)?','10%')
							.col-lg-3.col-sm-6 
								+radio-item('','2-3 чел','count')
									img.img-center(src="img/count-i-1.svg", alt="")
							.col-lg-3.col-sm-6 
								+radio-item('','4-6 чел','count')
									img.img-center(src="img/count-i-2.svg", alt="")
							.col-lg-3.col-sm-6 
								+radio-item('','7-12','count')
									img.img-center(src="img/count-i-3.svg", alt="")
							.col-lg-3.col-sm-6 
								+radio-item('','Более 12 чел','count')
									img.img-center(src="img/count-i-4.svg", alt="")
						+item(3,'Сколько человек будет пользоваться канализацией (с учетом гостей)?','10%')
							.col-lg-3.col-sm-6 
								+radio-item('step-3-1.jpg','Сезонный','step-3')
							.col-lg-3.col-sm-6 
								+radio-item('step-3-2.jpg','Летом','step-3')
							.col-lg-3.col-sm-6 
								+radio-item('step-3-3.jpg','Постоянный','step-3')
						
						+item(4,'Какой уровень грунтовых вод на Вашем участке?','10%')
							.col-lg-3.col-sm-6 
								+radio-item('step-4-1.jpg','Высокие грунтовые воды','step-4')
							.col-lg-3.col-sm-6 
								+radio-item('step-4-2.jpg','Низкие грунтовые воды','step-4')
							.col-lg-3.col-sm-6 
								+radio-item('','Не знаю, нужна консультация','step-4')
						+item(5,'Куда Вы хотели бы отводить очищенную воду?','10%')
							.col-lg-3.col-sm-6 
								+radio-item('step-5-1.jpg','На грунт','step-5')
							.col-lg-3.col-sm-6 
								+radio-item('step-5-2.jpg','В дренажный колодец','step-5')
							.col-lg-3.col-sm-6 
								+radio-item('step-5-3.jpg','В ливневую канаву','step-5')
							.col-lg-3.col-sm-6 
								+radio-item('','Еще не решил','step-5')
						+item(6,'Выберите необходимый уровень очистки','10%')
							.col-lg-3.col-sm-6 
								+radio-item('step-6-1.jpg','Высокий уровень очистки (не требует откачки ассенизаторской машиной)','step-6')
							.col-lg-3.col-sm-6 
								+radio-item('step-6-2.jpg','Средний уровень (почвенная доочистка)','step-6')
							.col-lg-3.col-sm-6 
								+radio-item('step-6-3.jpg','Без очистки (требует откачки ассенизаторской машиной)','step-6')
							.col-lg-3.col-sm-6 
								+radio-item('','Еще не решил','step-6')
						+item(7,'Выберите удобную для вас дату для бесплатного выезда инженера для осмотра участка и составления правильного технического решения','10%')
							.col-xxl-5.col-xl-4.col-sm-6
								+input("Выберите удобную дату")
							.col-xxl-5.col-xl-4.col-sm-6.align-self-center.py-3
								+in-c
									span затрудняюсь ответить
							
						+item().--last
	// end sQwiz