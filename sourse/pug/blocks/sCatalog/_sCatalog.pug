									option(value="") ПОКАЗЫВАТЬ ПО: 30
									option(value="") ПОКАЗЫВАТЬ ПО: 45
							+e.show-var.active.col-auto 
								+icon("icon-card")
							+e.show-var.col-auto 
								+icon("icon-line")
				.col-auto
					+e.panel--toggle
						+icon("filter-toggle")
						span Фильтр
				
		+e.wrap
			.row.g-0
				+e.col.col-xl-3.col-lg-4.col-sm-6
