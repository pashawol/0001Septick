					+prodItem()
						+e.label(style="--bg-color: var(--bs-primary)") Хит
				+e.col.col-xl-3.col-lg-4.col-sm-6
					+prodItem()
						+e.label(style="--bg-color: var(--bs-primary)") Хит
				
				- for (var x = 0; x < 3; x++)
					+e.col.col-xl-3.col-lg-4.col-sm-6
						
						+prodItem()
				+e.col.col-xl-3.col-lg-4.col-sm-6
					+b.prod-item(href="#")
						+pic("stock-card.png",'bg',0)
