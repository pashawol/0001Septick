mixin sCatalog(page)
	// start sCatalog
	+b.sCatalog.section.pt-0#sCatalog&attributes(attributes)
		img.before(src="img/@2x/webp/catalog-before.webp", alt="")
		+catalogHead()
		if page
			.row
				.col
					+e.panel
						.row.gx-3
							.col-auto.d-none.d-lg-block
								+icon("filter")
							.col-auto
								select.form-select
									option(value="") Сначала дешевый
									option(value="") Сначала дорогой
							.col 
								select.form-select
									option(value="") ПОКАЗЫВАТЬ ПО: 15
									option(value="") ПОКАЗЫВАТЬ ПО: 30
									option(value="") ПОКАЗЫВАТЬ ПО: 45
							+e.show-var.active.col-auto.d-none.d-md-block 
								+icon("icon-card")
							+e.show-var.col-auto.d-none.d-md-block 
								+icon("icon-line")
				.col-lg-auto
					+e.panel--toggle
						+icon("filter-toggle")
						span Фильтр
				
		+e.wrap
			.row.g-0
				+e.col.col-xl-3.col-lg-4.col-sm-6
					+prodItem()
						+e.label(style="--bg-color: var(--bs-warning)") Популярный
