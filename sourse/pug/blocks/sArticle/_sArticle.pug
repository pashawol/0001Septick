mixin serviceCard(title="Монтаж электрощитка", titleStrong="от 35 000 руб.", i="service.png", btn="заказать")
	+b.serviceCard
		+e.imgWrap
			+pic(i,'','')
		+e.title!= title 
			if titleStrong
				strong!= titleStrong
		if block
			block
		else
			ul
				li Подготовка
				li Проверка щитка
				li монтаж электропроводки
		+e.btn.btn.btn-success(href="#")= btn

